<UserControl x:Class="ToDo.ToDoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="280" Height="30" Background="Wheat">
		<StackPanel Orientation="Horizontal">
			<Rectangle Width="15" Height="15" Margin="10 0" Stroke="Black" StrokeThickness="2">
			</Rectangle>
			<TextBox x:Name="TaskName" Width="250" Height="30" FontSize="14" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center">
				New Item
			</TextBox>
		</StackPanel>
    </Grid>
</UserControl>
